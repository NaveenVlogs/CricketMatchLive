<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9B6FE8"
    tools:context=".SecurityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here Before Upload Video"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:id="@+id/tv_video"
        android:textStyle="bold"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/etid_email_vide1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
     android:layout_marginTop="80dp"
        android:layout_below="@id/tv_video"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter your email here"
        android:padding="5dp"
        android:textSize="25sp"
        android:textStyle="bold"/>

   <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter Password Here"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/etid_password_video"
        android:layout_margin="20dp"
        android:layout_below="@id/etid_email_vide1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Video"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/etid_password_video"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_upload_video"/>









</RelativeLayout>