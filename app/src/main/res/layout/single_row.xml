<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:background="#F4D3D3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#8FE7F3"
        android:layout_height="430dp">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@color/black"
        android:id="@+id/image_recyclerview_cart"/>

        <TextView
            android:id="@+id/tv_recyclerview_cart"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/image_recyclerview_cart"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_color"
            android:gravity="center"
            android:padding="10dp"
            android:text="demo name"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/tv_recyclerview_cart"
            android:background="@drawable/box_color"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:text="demo age"

            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:id="@+id/tv2_recyclerview_cart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/tv2_recyclerview_cart"
            android:background="@drawable/box_color"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:text="demo address"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:id="@+id/tv3_recyclerview_cart"/>





    </RelativeLayout>

</RelativeLayout>