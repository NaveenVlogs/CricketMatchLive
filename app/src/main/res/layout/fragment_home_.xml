<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDCF73"
    tools:context=".Fragment_Bottom.Home_Fragment">




   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="320dp"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="5dp"
       android:layout_marginBottom="150dp"
       android:background="#A3EDF6">

      <RelativeLayout
          android:id="@+id/recycler1"
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_marginStart="5dp"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="5dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/box_color">

         <ImageView
             android:id="@+id/box1"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:src="@drawable/pencil1" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/box1"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="12dp"
             android:text="Create Team"
             android:textColor="@color/teal_700"
             android:textSize="25sp"
             android:textStyle="bold" />


      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/recycler2"
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_below="@id/recycler1"
          android:layout_marginStart="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:layout_marginBottom="5dp"
          android:layout_toRightOf="@id/recycler4"
          android:background="@drawable/box_color">


         <ImageView
             android:id="@+id/box2"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:src="@drawable/mobile1" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/box2"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="12dp"
             android:text="Players Contact"
             android:textColor="@color/teal_700"
             android:textSize="18sp"
             android:textStyle="bold" />


      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/recycler3"
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_marginStart="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:layout_marginBottom="5dp"
          android:layout_toRightOf="@id/recycler1"
          android:background="@drawable/box_color2">

         <ImageView
             android:id="@+id/box3"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:src="@drawable/man1" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/box3"
             android:layout_marginLeft="25dp"
             android:layout_marginTop="12dp"
             android:text="Players Down"
             android:textColor="#E43C08"
             android:textSize="23sp"
             android:textStyle="bold" />

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/recycler4"
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_below="@id/recycler1"
          android:layout_marginStart="5dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/box_color2">

         <ImageView
             android:id="@+id/box4"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="20dp"
             android:src="@drawable/mail1" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/box4"
             android:layout_marginLeft="70dp"
             android:layout_marginTop="01dp"
             android:text="Live"
             android:textColor="#E43C08"
             android:textSize="30sp"
             android:textStyle="bold" />
      </RelativeLayout>


   </RelativeLayout>



</RelativeLayout>